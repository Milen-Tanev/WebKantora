@model CreateArticleViewModel

@{
    ViewData["Title"] = "Create Article";
}

<h2>@ViewData["Title"]</h2>

<form asp-area="Administration" asp-controller="Blog" asp-action="CreateArticle" method="post" enctype="multipart/form-data" class="form-horizontal">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ArticleContent" class="col-md-2 control-label">Файл</label>
        <div class="col-md-10">
            <input asp-for="ArticleContent" type="file" class="btn btn-default btn-file" />
            <span asp-validation-for="ArticleContent" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Keywords" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <form asp-area="Administration" asp-controller="Blog" asp-action="AddKeyword" enctype="multipart/form-data" class="form-horizontal">
                <input asp-for="Keywords" class="form-control my-inline" id="keyword" />
                <button type="submit" class="btn-btn-default my-inline" value="Submit">Добави</button>
                <span asp-validation-for="Keywords" class="text-danger"></span>
            </form>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default" value="Upload">Изпрати</button>
        </div>
    </div>
    <div id="all-keywords">
        @await Html.PartialAsync("_AllKeywords");
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<script src="~/js/autocompleteKeywords.js" asp-append-version="true">utocompleteKeywords(@Json.Serialize(Model.AllKeywords.Select(x => x.Content).ToArray()))</script>
