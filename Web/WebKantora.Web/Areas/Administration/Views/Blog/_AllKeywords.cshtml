@model CreateArticleViewModel

<span asp-validation-for="Keyword" class="text-danger"></span>
<ul>
    @for (int i = 0; i < Model.Keywords.Count; i++)
    {
        <li class="@Model.Keywords[i]">
            @Model.Keywords[i]
            <input asp-for="@Model.Keywords[i]" class="hidden" />
            <input type="button" name="remove-keyword" value="Remove" class="remove-keyword" />
        </li>
    }
</ul>
